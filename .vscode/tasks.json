{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build PlatformIO project",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Build PlatformIO project (re-run)",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Build PlatformIO project (final)",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"-v"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Clean and Build PlatformIO project",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"-t",
				"clean",
				"&&",
				"platformio",
				"run"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}